server {
    listen                    28199 ssl http2 default_server;
    listen                    [::]:28199 ssl http2 default_server;
    server_name               localhost;

    add_header                Strict-Transport-Security "max-age=31536000" always;

    ssl_session_cache         shared:SSL:20m;
    ssl_session_timeout       10m;

    ssl_protocols             TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers               "ECDH+AESGCM:ECDH+AES256:ECDH+AES128:!ADH:!AECDH:!MD5;";

    ssl_stapling              on;
    ssl_stapling_verify       on;
    resolver                  8.8.8.8 8.8.4.4;

    ssl_certificate           /etc/nginx/root-ca.pem;
    ssl_certificate_key       /etc/nginx/root-ca.key;

    access_log                /var/log/nginx/access_minio.log;
    error_log                 /var/log/nginx/error_minio.log;

    location / {
        include            cors.conf;
        resolver           127.0.0.11 valid=30s;
        set                $backend "minio:9001";
        proxy_pass         http://$backend;
        proxy_set_header   Host $host;
        error_page         502 503 504 = @fallback;
    }

    location @fallback {
        return 503 "Service is temporarily unavailable. Please try again later.";
    }
}