server {
    listen                    28202 ssl http2 default_server;
    listen                    [::]:28202 ssl http2 default_server;
    server_name               localhost;

    add_header                Strict-Transport-Security "max-age=31536000" always;

    ssl_session_cache         shared:SSL:20m;
    ssl_session_timeout       10m;

    ssl_protocols             TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers               "ECDH+AESGCM:ECDH+AES256:ECDH+AES128:!ADH:!AECDH:!MD5;";

    ssl_stapling              on;
    ssl_stapling_verify       on;
    resolver                  8.8.8.8 8.8.4.4;

    ssl_certificate           /etc/nginx/root-ca.pem;
    ssl_certificate_key       /etc/nginx/root-ca.key;

    access_log                /var/log/nginx/access_grafana.log;
    error_log                 /var/log/nginx/error_grafana.log;

    location / {
        include cors.conf;
        proxy_pass         http://grafana:8202/;
        proxy_set_header   Host $host;
    }
}